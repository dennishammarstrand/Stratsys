@model Client.Models.Skiier

@{
    ViewData["Title"] = "Home Page";
}

<div class="form-group row col-xs-3 justify-content-center text-light">
    <h1>Ski Length Calculator</h1>
</div>
<form>
    <div class="form-group row justify-content-center">
        <div class="col-xs-3">
            <label class="text-light">Body Length</label>
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="Length" type="number" class="form-control" placeholder="Enter length in cm" />
            <span asp-validation-for="Length" class="text-warning"></span>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-xs-3">
            <label class="text-light">Age</label>
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="Age" type="number" class="form-control" placeholder="Enter age" />
            <span asp-validation-for="Age" class="text-warning"></span>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-xs-3">
            <label class="text-light">Ski Style</label>
            <select asp-for="Style" class="form-control" asp-items="@Html.GetEnumSelectList<Style>()"></select>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-xs-3">
            <input class="btn btn-outline-light" asp-action="LengthRequest" type="submit" value="Request Ski Length" formmethod="post" />
        </div>
    </div>
</form>
<div class="text-center text-light">
    @if (Model != null)
    {
        <h5>Your estimated ski length.</h5>
        <i class="fas fa-skiing-nordic fa-3x"></i><h1>@Model.SkiLength cm</h1>
    }
</div>